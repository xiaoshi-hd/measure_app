<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="true">
        <shape>
            <solid android:color="#FF2"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:state_checked="false">
        <shape>
            <stroke
                android:color="#FF2"
                android:width="3dp"/>
            <corners
                android:radius="10dp"/>
        </shape>
    </item>
</selector>