<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shuizhun"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.miss.Shuizhun.ShuizhunActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Toolbar-->
        <include layout="@layout/activity_toolbar"
            android:id="@+id/toolbar_shuizhun" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/shuizhun_lastStation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="上一测站:     "
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/shuizhun_leijicha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="视距累积差:   0"
            android:textSize="18sp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="#3C8DC4"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本测站编号："/>
            <EditText
                android:id="@+id/shuizhun_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="    测站    "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="后尺常数:"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/shuizhun_K_hou"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="前尺常数:"
                android:layout_weight="1"/>
            <EditText
                android:id="@+id/shuizhun_K_qian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#3C8DC4"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:text="后尺黑面"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上："/>
            <EditText
                android:id="@+id/shuizhun_hou_black_shang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="(1)"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下："/>
            <EditText
                android:id="@+id/shuizhun_hou_black_xia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="(2)"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中："/>
            <EditText
                android:id="@+id/shuizhun_hou_black_zhong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="(3)"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="18sp"
            android:text="前尺黑面"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中："/>
            <EditText
                android:id="@+id/shuizhun_qian_black_zhong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="(4)"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上："/>
            <EditText
                android:id="@+id/shuizhun_qian_black_shang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="(5)"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下："/>
            <EditText
                android:id="@+id/shuizhun_qian_black_xia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:hint="(6)"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="前尺红面中(辅助分划)："/>
            <EditText
                android:id="@+id/shuizhun_qian_red_zhong"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="(7)"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="后尺红面中(辅助分划)："/>
            <EditText
                android:id="@+id/shuizhun_hou_red_zhong"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="(8)"
                android:inputType="number"
                android:digits="1234567890."
                android:maxLines="1"/>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#3C8DC4">
        </View>

        <Button
            android:id="@+id/shuizhun_jisuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:text="计算"
            android:textSize="20dp"
            android:background="@drawable/s_bt1"/>
    </LinearLayout>
</ScrollView>
