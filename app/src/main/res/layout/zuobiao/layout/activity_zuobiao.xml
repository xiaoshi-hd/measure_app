<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zuobiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miss.Zuobiao.ZuobiaoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:fitsSystemWindows="true">
        <!--Toolbar-->
        <include layout="@layout/activity_toolbar"
            android:id="@+id/toolbar_zuobiao" />

        <LinearLayout
            android:id="@+id/zuobiao_ll_tuoqiu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar_zuobiao">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/zuobiao_rg_tuoqiu">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="坐标系"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/zuobiao_Krassovsky"
                    android:text="Krassovsky"
                    android:checked="true"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/zuobiao_ICGG1975"
                    android:text="ICGG1975"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/zuobiao_WGS_84"
                    android:text="WGS_84"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/zuobiao_CGCS2000"
                    android:text="CGCS2000"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zuobiao_ll_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/toolbar_zuobiao"
            android:layout_toRightOf="@+id/zuobiao_ll_tuoqiu">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="坐标转换方式"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"/>
            <Spinner
                android:id="@+id/spacer"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:entries="@array/translate">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zuobiao_ll_fendai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/zuobiao_ll_choose"
            android:layout_toRightOf="@+id/zuobiao_ll_tuoqiu">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:id="@+id/zuobiao_rg_fendai">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="分带选择"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/zuobiao_6dudai"
                    android:text="6度带"
                    android:checked="true"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/zuobiao_3dudai"
                    android:text="3度带"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"/>
            </RadioGroup>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/zuobiao_rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/zuobiao_ll_tuoqiu"
            >
            <TextView
                android:id="@+id/zuobiao_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大地坐标"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/zuobiao_ed11"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="B(dms)"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/zuobiao_t1"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/zuobiao_ed21"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="L(dms)"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/zuobiao_ed11"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/zuobiao_ed31"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="H(m)"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/zuobiao_ed21"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/zuobiao_rl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/zuobiao_ll_tuoqiu"
            android:layout_toRightOf="@+id/zuobiao_rl1"
            >
            <TextView
                android:id="@+id/zuobiao_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="空间直角坐标"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/zuobiao_ed12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="X(m)"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/zuobiao_t2"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/zuobiao_ed22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Y(m)"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/zuobiao_ed12"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/zuobiao_ed32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Z(m)"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/zuobiao_ed22"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
        </RelativeLayout>
        <Button
            android:id="@+id/zuobiao_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zuobiao_rl2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="计算"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"
            android:background="@drawable/s_bt1"/>
    </RelativeLayout>
</ScrollView>
