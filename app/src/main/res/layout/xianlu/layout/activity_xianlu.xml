<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_xianlu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.miss.Xianlu.XianluActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:fitsSystemWindows="true">
    <!--Toolbar-->
    <include layout="@layout/activity_toolbar"
        android:id="@+id/toolbar_xianlu" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/colorGray1"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/toolbar_xianlu">
        <RelativeLayout
            android:id="@+id/xianlu_rl1"
            android:layout_width="230dp"
            android:layout_height="wrap_content"

            android:padding="10dp">
            <TextView
                android:id="@+id/xianlu_t0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="前缓直点数据"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/xianlu_ed_qhz_zhuanghao"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="桩号"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_t0"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"
                 />
            <EditText
                android:id="@+id/xianlu_ed_qhz_X"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="X坐标"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_ed_qhz_zhuanghao"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_qhz_Y"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Y坐标"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_toRightOf="@+id/xianlu_ed_qhz_X"
                android:layout_below="@+id/xianlu_ed_qhz_zhuanghao"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/xianlu_ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/xianlu_rl1">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/xianlu_rg1">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="转向选择"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/xianlu_rd1"
                    android:text="右转"
                    android:checked="true"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/xianlu_rd2"
                    android:text="左转"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"/>
            </RadioGroup>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/xianlu_rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/xianlu_rl1">
            <TextView
                android:id="@+id/xianlu_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交点数据"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/xianlu_ed_jd_zhuanghao"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="桩号"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_t3"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_jd_X"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="X坐标"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_t3"
                android:layout_toRightOf="@id/xianlu_ed_jd_zhuanghao"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_jd_Y"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Y坐标"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_toRightOf="@+id/xianlu_ed_jd_X"
                android:layout_below="@+id/xianlu_t3"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_jd_zhuangju"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="桩距"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_ed_jd_zhuanghao"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_jd_banjing"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="半径R"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_ed_jd_X"
                android:layout_toRightOf="@id/xianlu_ed_jd_zhuangju"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_jd_zhuanjiao"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="转角d.ms"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_toRightOf="@+id/xianlu_ed_jd_banjing"
                android:layout_below="@+id/xianlu_ed_jd_Y"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_jd_Ls1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Ls1"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_ed_jd_zhuangju"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_jd_Ls2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="Ls2"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_ed_jd_banjing"
                android:layout_toRightOf="@id/xianlu_ed_jd_Ls1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/xianlu_rl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_below="@id/xianlu_rl2">
            <TextView
                android:id="@+id/xianlu_t4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="边桩数据"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/xianlu_ed_bz_zuo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="左桩距"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_t4"
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
            <EditText
                android:id="@+id/xianlu_ed_bz_you"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:hint="右桩距"
                android:ems="10"
                android:textSize="20sp"
                android:background="@drawable/edittext"
                android:layout_below="@+id/xianlu_t4"
                android:layout_toRightOf="@id/xianlu_ed_bz_zuo"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"/>
        </RelativeLayout>
        <Button
            android:id="@+id/xianlu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/xianlu_rl3"
            android:layout_marginTop="30dp"
            android:text="计算"
            android:layout_marginBottom="20dp"
            android:textSize="25dp"
            android:background="@drawable/s_bt1"/>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
