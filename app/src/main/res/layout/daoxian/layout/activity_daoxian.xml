<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_daoxian"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.miss.Daoxian.DaoxianActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--Toolbar-->
    <include layout="@layout/activity_toolbar"
        android:id="@+id/toolbar_daoxian" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_daoxian">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="请输入已知数据，准备测量"
            android:textSize="22sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/daoxian_zhuanxiang">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="转折角:       "
                    android:textSize="15sp" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/daoxian_left"
                    android:text="    左角     "
                    android:checked="true"
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack" />
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/daoxian_right"
                    android:text="    右角     "
                    android:textSize="15sp"
                    android:textColor="@color/colorBlack"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起始边方位角: "
                android:textSize="15sp"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:id="@+id/daoxian_du_first"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="度 "/>
            <EditText
                android:id="@+id/daoxian_fen_first"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分 "/>
            <EditText
                android:id="@+id/daoxian_miao_first"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒 "/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="结束边方位角: "
                android:textSize="15sp"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:id="@+id/daoxian_du_end"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="度 "/>
            <EditText
                android:id="@+id/daoxian_fen_end"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分 "/>
            <EditText
                android:id="@+id/daoxian_miao_end"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒 "/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="起始点B的坐标"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" X: "/>
            <EditText
                android:id="@+id/daoxian_BX"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y: "/>
            <EditText
                android:id="@+id/daoxian_BY"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="结束点C的坐标"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" X: "/>
            <EditText
                android:id="@+id/daoxian_CX"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Y: "/>
            <EditText
                android:id="@+id/daoxian_CY"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="1234567890.-"
                android:maxLines="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:background="#3C8DC4"></View>

        <Button
            android:id="@+id/daoxian_button_begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="开始测量"
            android:layout_gravity="center"
            android:background="@drawable/s_bt1"/>
    </LinearLayout>
    </RelativeLayout>
</ScrollView>
