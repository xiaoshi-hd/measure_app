<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--Toolbar-->
    <include layout="@layout/activity_toolbar"
        android:id="@+id/toolbar_daoxian_jisuan" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="测站："/>
        <EditText
            android:id="@+id/daoxian_cezhan"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:maxLines="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="观测角："/>
        <EditText
            android:id="@+id/daoxian_du"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="1234567890.-"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="度 "/>
        <EditText
            android:id="@+id/daoxian_fen"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="1234567890.-"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分 "/>
        <EditText
            android:id="@+id/daoxian_miao"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="1234567890.-"
            android:maxLines="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="秒 "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/daoxian_dis_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="观测距离: "/>
        <EditText
            android:id="@+id/daoxian_dis"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="1234567890.-"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/daoxian_m_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/daoxian_button_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" 重测本站 "
            android:textSize="15dp"
            android:background="@drawable/s_bt1"/>
        <Button
            android:id="@+id/daoxian_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" 迁至下一站 "
            android:textSize="15dp"
            android:background="@drawable/s_bt1"/>
        <Button
            android:id="@+id/daoxian_button_pingcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:text=" 平差计算 "
            android:background="@drawable/s_bt1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="#3C8DC4"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>