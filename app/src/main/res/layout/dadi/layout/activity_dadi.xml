<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dadi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.miss.Dadi.DadiActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:fitsSystemWindows="true">
    <!--Toolbar-->
    <include layout="@layout/activity_toolbar"
        android:id="@+id/toolbar_dadi" />

    <LinearLayout
        android:id="@+id/dadi_ll_choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar_dadi">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/dadi_rg1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="计算选择"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/dadi_zheng"
                android:text="大地主题正算"
                android:checked="true"
                android:textSize="20sp"
                android:textColor="@color/colorBlack" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/dadi_fan"
                android:text="大地主题反算"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dadi_ll_tuoqiu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/dadi_ll_choose"
        android:layout_below="@+id/toolbar_dadi">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:id="@+id/dadi_rg2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="椭球选择"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/dadi_Krassovsky"
                android:text="Krassovsky"
                android:checked="true"
                android:textSize="20sp"
                android:textColor="@color/colorBlack" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/dadi_ICGG1975"
                android:text="ICGG1975"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/dadi_WGS_84"
                android:text="WGS_84"
                android:textSize="20sp"
                android:textColor="@color/colorBlack" />
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/dadi_CGCS2000"
                android:text="CGCS2000"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>
        </RadioGroup>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/dadi_rl1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/dadi_ll_choose">
        <TextView
            android:id="@+id/dadi_t0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已知数据:"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/dadi_B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:hint="B1"
            android:ems="10"
            android:textSize="20sp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/dadi_t0"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:digits="1234567890.-"
            android:singleLine="true"
            android:maxLines="1"
            />
        <EditText
            android:id="@+id/dadi_L1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:hint="L1"
            android:ems="10"
            android:textSize="20sp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/dadi_B1"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:digits="1234567890.-"
            android:singleLine="true"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/dadi_A12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:hint="A12"
            android:ems="10"
            android:textSize="20sp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/dadi_L1"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:digits="1234567890.-"
            android:singleLine="true"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/dadi_S"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:hint="S"
            android:ems="10"
            android:textSize="20sp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/dadi_A12"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:digits="1234567890.-"
            android:singleLine="true"
            android:maxLines="1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dadi_rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/dadi_ll_tuoqiu"
        android:layout_toRightOf="@+id/dadi_rl1">
        <TextView
            android:id="@+id/dadi_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计算结果:"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/dadi_B2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:hint="B2"
            android:ems="10"
            android:textSize="20sp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/dadi_t1"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            />
        <EditText
            android:id="@+id/dadi_L2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:hint="L2"
            android:ems="10"
            android:textSize="20sp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/dadi_B2"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"/>
        <EditText
            android:id="@+id/dadi_A21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:hint="A21"
            android:ems="10"
            android:textSize="20sp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/dadi_L2"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"/>
    </RelativeLayout>
    <Button
        android:id="@+id/dadi_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dadi_rl2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="计算"
        android:textSize="25dp"
        android:background="@drawable/s_bt1"/>
    </RelativeLayout>
</ScrollView>
