<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fangweijiao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.miss.tools.fangweijiaoActivity">
    <!--Toolbar-->
    <include layout="@layout/activity_toolbar"
        android:id="@+id/toolbar_fangweijiao" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/colorGray1"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/toolbar_fangweijiao">
        <!--<TextView
            android:id="@+id/fangweijiao_t0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="方位角计算"
            android:layout_centerHorizontal="true"
            android:textSize="40sp" />-->
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/fangweijiao_qi_X"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="起点X坐标"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:digits="1234567890.-"
                android:singleLine="true"
                android:maxLines="1"
                />

            <EditText
                android:id="@+id/fangweijiao_qi_Y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="起点Y坐标"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:inputType="number"
                android:digits="1234567890.-"
                android:singleLine="true"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll">
            <EditText
                android:id="@+id/fangweijiao_zhong_X"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="终点X坐标"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:digits="1234567890.-"
                android:singleLine="true"
                android:maxLines="1"
                />

            <EditText
                android:id="@+id/fangweijiao_zhong_Y"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:hint="终点Y坐标"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:inputType="number"
                android:digits="1234567890.-"
                android:singleLine="true"
                android:maxLines="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/fangweijiao_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginTop="30dp"
            android:hint="计算结果"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:digits="1234567890.-"
            android:singleLine="true"
            android:maxLines="1"
            android:layout_below="@id/l2" />
        <Button
            android:id="@+id/fangweijiao_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fangweijiao_result"
            android:layout_marginTop="30dp"
            android:text="计算"
            android:textSize="30dp"
            android:background="@drawable/s_bt1"/>
    </RelativeLayout>

</RelativeLayout>