<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dms_translate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.miss.tools.dms_translateActivity">
    <!--Toolbar-->
    <include layout="@layout/activity_toolbar"
        android:id="@+id/toolbar_dms_translate" />

        <TextView
            android:id="@+id/dms_translate_t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="度分秒化弧度："
            android:textSize="25sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <EditText
                android:id="@+id/dms_translate_dms"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:hint="度.分秒"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1" />

            <EditText
                android:id="@+id/dms_translate_hudu_result"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="弧度"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1" />
        </LinearLayout>

        <Button
            android:id="@+id/dms_translate_button0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="计算"
            android:textSize="30dp"
            android:background="@drawable/s_bt1"/>
    <TextView
        android:id="@+id/dms_translate_t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="弧度化度分秒："
        android:textSize="25sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <EditText
            android:id="@+id/dms_translate_hudu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="10dp"
            android:hint="弧度"
            android:ems="10"
            android:textSize="25sp"
            android:background="@drawable/edittext"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/dms_translate_dms_result"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="度.分秒"
            android:ems="10"
            android:textSize="25sp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            />

    </LinearLayout>

        <Button
            android:id="@+id/dms_translate_button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="计算"
            android:textSize="30dp"
            android:background="@drawable/s_bt1"/>

</LinearLayout>