<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zuobiaozheng"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.miss.tools.zuobiaozhengActivity">
    <!--Toolbar-->
    <include layout="@layout/activity_toolbar"
        android:id="@+id/toolbar_zuobiaozheng" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/colorGray1"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/toolbar_zuobiaozheng">
        <TextView
            android:id="@+id/zuobiaozheng_t0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="坐标正算"
            android:layout_centerHorizontal="true"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/zuobiaozheng_XA"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:hint="起点X坐标"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:layout_below="@+id/zuobiaozheng_t0"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            />

        <EditText
            android:id="@+id/zuobiaozheng_YA"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:hint="起点Y坐标"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            android:layout_below="@id/zuobiaozheng_t0"
            android:layout_toRightOf="@+id/zuobiaozheng_XA"
            />
        <EditText
            android:id="@+id/zuobiaozheng_fangweijiao"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:hint="方位角(d.ms)"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:layout_marginTop="30dp"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            android:layout_below="@id/zuobiaozheng_XA"
            />
        <EditText
            android:id="@+id/zuobiaozheng_juli"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:hint="距离"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            android:layout_below="@id/zuobiaozheng_YA"
            android:layout_toRightOf="@+id/zuobiaozheng_fangweijiao" />

        <EditText
            android:id="@+id/zuobiaozheng_XB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:hint="终点X坐标"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            android:layout_below="@id/zuobiaozheng_juli" />
        <EditText
            android:id="@+id/zuobiaozheng_YB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:hint="终点Y坐标"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            android:layout_below="@id/zuobiaozheng_XB" />
        <Button
            android:id="@+id/zuobiaozheng_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zuobiaozheng_YB"
            android:layout_marginTop="30dp"
            android:text="计算"
            android:textSize="30dp"
            android:background="@drawable/s_bt1"/>
    </RelativeLayout>
</RelativeLayout>