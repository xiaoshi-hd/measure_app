<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zuobiaozheng"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context="com.example.miss.tools.zuobiaozhengActivity">
    <!--Toolbar-->
    <include layout="@layout/activity_toolbar"
        android:id="@+id/toolbar_zuobiaozheng" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:background="@color/colorGray1"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/toolbar_zuobiaozheng">
        <LinearLayout
            android:id="@+id/zuobiaozheng_l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/zuobiaozheng_XA"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:hint="起点X坐标"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:layout_marginTop="20dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"
                />

            <EditText
                android:id="@+id/zuobiaozheng_YA"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:hint="起点Y坐标"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zuobiaozheng_l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zuobiaozheng_l1">
            <EditText
                android:id="@+id/zuobiaozheng_fangweijiao"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:hint="方位角(d.ms)"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1"
                />
            <EditText
                android:id="@+id/zuobiaozheng_juli"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:hint="距离(m)"
                android:ems="10"
                android:textSize="25sp"
                android:background="@drawable/edittext"
                android:inputType="number"
                android:digits="1234567890."
                android:singleLine="true"
                android:maxLines="1" />

        </LinearLayout>

        <EditText
            android:id="@+id/zuobiaozheng_XB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:hint="终点X坐标"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            android:layout_below="@id/zuobiaozheng_l2" />
        <EditText
            android:id="@+id/zuobiaozheng_YB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:hint="终点Y坐标"
            android:ems="10"
            android:textSize="30sp"
            android:background="@drawable/edittext"
            android:inputType="number"
            android:digits="1234567890."
            android:singleLine="true"
            android:maxLines="1"
            android:layout_below="@id/zuobiaozheng_XB" />
        <Button
            android:id="@+id/zuobiaozheng_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/zuobiaozheng_YB"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="计算"
            android:textSize="30dp"
            android:background="@drawable/s_bt1"/>
    </RelativeLayout>
</RelativeLayout>